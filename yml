version: 2.1

orbs:
  node: circleci/node@5.1.0

jobs:
  build-and-test:
    docker:
      - image: cimg/node:20.11.0
    steps:
      - checkout
      
      - restore_cache:
          keys:
            - v1-dependencies-{{ checksum "package-lock.json" }}
            - v1-dependencies-
      
      - run:
          name: Install Dependencies
          command: npm ci
      
      - save_cache:
          paths:
            - node_modules
          key: v1-dependencies-{{ checksum "package-lock.json" }}
      
      - run:
          name: Run Linting
          command: npm run lint
      
      - run:
          name: Build Project
          command: npm run build
      
      - persist_to_workspace:
          root: .
          paths:
            - dist
            - node_modules

  deploy:
    docker:
      - image: cimg/node:20.11.0
    steps:
      - checkout
      - attach_workspace:
          at: .
      
      - run:
          name: Deploy Application
          command: |
            echo "Add your deployment commands here"
            # Example: npm run deploy or custom deployment script

workflows:
  version: 2
  build-test-deploy:
    jobs:
      - build-and-test
      - deploy:
          requires:
            - build-and-test
          filters:
            branches:
              only: main
